<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/solution_Ans"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"
        android:text="Decimal -- binary calculator"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_Ans"
        android:text="0"
        android:textAlignment="textEnd"
        android:layout_margin="16dp"
        android:layout_above="@+id/buttons_layout"
        android:textSize="64dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/solution_Ans"
        android:text=""
        android:textAlignment="textEnd"
        android:layout_margin="16dp"
        android:layout_above="@+id/result_Ans"
        android:textSize="34dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttons_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_margin="12dp"
                android:text="1"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_1"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_margin="12dp"
                android:text="2"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_2"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_margin="12dp"
                android:text="3"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_3"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_margin="12dp"
                android:text="4"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_4"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_margin="12dp"
                android:text="5"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_5"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_margin="12dp"
                android:text="6"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_6"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_margin="12dp"
                android:text="7"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_7"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_margin="12dp"
                android:text="8"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_8"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_margin="12dp"
                android:text="9"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_9"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_margin="12dp"
                android:text="+"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_add"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_margin="12dp"
                android:text="x"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_delete"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_margin="12dp"
                android:text="="
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_Equals"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_margin="12dp"
                android:text="0"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_0"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_margin="12dp"
                android:text="C"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_Clear"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="156dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_margin="16dp"
                android:text="D-B"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:id="@+id/button_covert"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

